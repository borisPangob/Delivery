<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    app:cardElevation="24dp"
    app:cardBackgroundColor="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLabelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="Date :" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvLabelDate"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            tools:text="12 Janvier 2024" />
        <TextView
            android:id="@+id/tvLabelRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tvDate"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="Ref :" />
        <TextView
            android:id="@+id/tvRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvLabelDate"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tvDate"
            android:textColor="@color/white"
            android:textSize="18dp"
            tools:text="e3PYrUFmDzuuiVJMuQjX" />

        <Spinner
            android:id="@+id/spinnerAdrresses"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tvRef"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="87dp"
            />
        <Button
            android:id="@+id/btnRefuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refuser"
            android:layout_below="@+id/spinnerAdrresses"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/red"
           />
        <Button
            android:id="@+id/btnAccepter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepter"
            android:layout_below="@+id/spinnerAdrresses"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>